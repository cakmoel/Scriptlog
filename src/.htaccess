################################
# Scriptlog Apache Settings
# .htaccess v1.0 2018
################################

# Hide the following from the world
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|tpl)$">
 Order Allow,Deny
 Deny from all
</FilesMatch>

############### SET Keep-Alive ##################
<IfModule mod_headers.c>
 Header always append X-Frame-Options SAMEORIGIN
 #Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
 Header set Connection keep-alive
 Header set Referrer-Policy "no-referrer-when-downgrade"
 <FilesMatch ".(js|css|ico|txt|htm|html|png|jpg|webp|gif|js|eot|svg|ttf|woff|woff2|php)$">
   Header set Cache-Control "max-age=31536000, public"
 </FilesMatch>
</IfModule>

############### SET COOKIES DOMAIN ##################
# Use Mod_deflate to compress static files
<IfModule mod_deflate.c>
 <Filesmatch ".(js|css|ico|txt|htm|html|png|jpg|gif|webp||js|eot|svg|ttf|woff|woff2|php)$">
 SetOutputFilter DEFLATE
 </Filesmatch>
</IfModule>

############## Write Friendly URL ################
<IfModule mod_rewrite.c>
# mod_rewrite rules
RewriteEngine On 

# The RewriteBase of the system (change if you are using this sytem in a sub-folder).
#RewriteBase /

# This will make the site only accessible without the "www." 
#RewriteCond %{HTTP_HOST} ^www\.yourdomain\.TLD$
#RewriteRule ^/?$ "https\:\/\/yourdomain\.TLD\/" [R=301, L]

# Ensure all front-end UI-UX files readable
RewriteCond %{REQUEST_FILENAME} !\.(ico|css|png|jpg|webp|gif|js|eot|svg|ttf|woff|woff2)$ [NC]
RewriteRule ^public/.*$ index.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-l 
RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Deny Folder Indexes.
Options -Indexes
